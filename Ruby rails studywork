class 猫
  def 追いかける（ネズミ）
    puts "一生懸命#{ネズミ}を追いかけた"  #メッセージを出力
  end
end

タマ = 猫.new

> label = "氏名"
=> "氏名"

class User
  def name=(name)
    @name = name
  end

  def name
    @name
  end
end

user = User.new
user.name = "とも"
=> "とも"

user.name
=> "とも"

